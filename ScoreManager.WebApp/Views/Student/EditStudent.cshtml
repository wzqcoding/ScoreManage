@using Models
@using Newtonsoft.Json
@model EDU_STUDENT
@{
    List<EDU_CLASS> enableClass = ViewBag.EnableClass as List<EDU_CLASS>;
    var enableClassStr= JsonConvert.SerializeObject(enableClass.Select(c => new { name = c.NAME, value = c.ID ,selected=c.ID==Model.CLASSID}));

}
<script src="/resource/lib/layui/xm-select.js"></script>
<div class="layui-fluid">
    <div class="layui-row">
        <form method="post" class="layui-form">
            <div class="layui-form-item">
                <label for="username" class="layui-form-label">
                    <span class="x-red">*</span>登录名
                </label>
                <div class="layui-input-inline">
                    <input type="text" id="username" disabled value="@Model.User.USERNAME" name="username" required="" lay-verify="username"
                           autocomplete="off" class="layui-input">
                </div>
                <div class="layui-form-mid layui-word-aux">
                    <span class="x-red">*</span>将会成为您唯一的登入名
                </div>
            </div>
            <div id="divName" class="layui-form-item">
                <label for="realName" class="layui-form-label">
                    <span class="x-red">*</span>姓名
                </label>
                <div class="layui-input-inline">
                    <input type="text" id="realName" value="@Model.NAME" name="realName" required="" lay-verify="realname"
                           autocomplete="off" class="layui-input">
                </div>

            </div>
             <div class="layui-form-item">
                <label class="layui-form-label">班级</label>
                <div class="layui-input-inline">
                    <div id="divClass"></div>
                </div>
            </div>

            <div id="divStudyCode" class="layui-form-item">
                <label for="StudyCode" class="layui-form-label">
                    学号
                </label>
                <div class="layui-input-inline">
                    <input type="text" id="StudyCode"  @(string.IsNullOrEmpty( Model.STUDYCODE)?"":"disabled")  value="@Model.STUDYCODE" name="StudyCode" lay-verify="studycode"
                           autocomplete="off" class="layui-input">
                </div>
                 <div class="layui-form-mid layui-word-aux">
                    <span class="x-red">*</span>填写后将不可更改
                </div>
            </div>
            <div class="layui-form-item">
                <label for="L_pass" class="layui-form-label">
                    <span class="x-red">*</span>密码
                </label>
                <div class="layui-input-inline">
                    <input type="password" id="L_pass" name="pass" value="@Model.User.PASSWORD" required="" lay-verify="pass"
                           autocomplete="off" class="layui-input">
                </div>
                <div class="layui-form-mid layui-word-aux">
                    6到16个字符
                </div>
            </div>
            <div class="layui-form-item">
                <label for="L_repass" class="layui-form-label">
                    <span class="x-red">*</span>确认密码
                </label>
                <div class="layui-input-inline">
                    <input type="password" id="L_repass" name="repass" value="@Model.User.PASSWORD" required="" lay-verify="repass"
                           autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item">
                <label for="L_repass" class="layui-form-label">
                </label>
                <button class="layui-btn" lay-filter="edit" onclick=" return false;" lay-submit="">
                    修改
                </button>
            </div>
        </form>
    </div>
</div>
<script>
     var enableClass= xmSelect.render({
        el: '#divClass',
        language: 'zn',
        filterable: true,
        radio: true,
        data: @Html.Raw( enableClassStr)
    });
    layui.use(['form', 'layer'],
        function() {
            $ = layui.jquery;
            var form = layui.form,
                layer = layui.layer;

            //自定义验证规则
            form.verify({
               
                realname: function(value) {
                    if (value.length < 2) {
                        return '姓名至少得2个字符啊';
                    }
                },
                studycode: function(value) {
                    if ( value.length < 5) {
                        return '学号至少需要5个字符啊';
                    }
                },
                pass: [/(.+){6,12}$/, '密码必须6到12位'],
                
                repass: function(value) {
                    if ($('#L_pass').val() != $('#L_repass').val()) {
                        return '两次密码不一致';
                    }
                }

            });

            //监听提交
            form.on('submit(edit)', function(data) {
                 data.field.ClassId = enableClass.getValue('value');
                 data.field.Id = @Model.ID;
                //发异步，把数据提交给php
                $.post("/Student/EditStudent", data.field, function(ret) {
                    if (ret.Code == 0) {
                        layer.alert("修改成功", {
                            icon: 6
                        },
                        function() {
                            //关闭当前frame
                            xadmin.close();

                            // 可以对父窗口进行刷新
                            xadmin.father_reload();
                        });
                        return false;
                    } else {
                        layer.alert(ret.Message, { icon: 5 });
                    }

                });
            });
        });
</script>


