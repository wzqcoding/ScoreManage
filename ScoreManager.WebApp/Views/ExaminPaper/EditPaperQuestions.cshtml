@using Models
@model List<EDU_EXAMQUESTIONS>

@{
    int paperid = int.Parse(ViewBag.PaperId.ToString());
    string disabled = bool.Parse(ViewBag.IsInUse.ToString()) ? "disabled" : "";
}

<form class="layui-form" id="myForm">
    <div class="layui-fluid">
        <div class="layui-row layui-col-space15">
            <div class="layui-col-md12">
                <div class="layui-card">

                    @if (string.IsNullOrEmpty(disabled))
                    {
                        <div class="layui-card-header">

                            <button class="layui-btn" onclick="    AddQuestion(); return false;">添加</button>
                            <button class="layui-btn layui-btn-normal" lay-submit="" lay-filter="add" onclick="return false;">保存</button>
                        </div>
                    }

                    <div class="layui-card-body layui-table-body layui-table-main">
                        <table class="layui-table layui-form">
                            <thead>
                                <tr>
                                    <th width="80">序号</th>
                                    <th>试题内容</th>
                                    <th>试题答案</th>
                                    <th>试题分数</th>
                                    @if (string.IsNullOrEmpty(disabled))
                                    {
                                        <th>操作</th>

                                    }
                                </tr>
                            </thead>
                            <tbody id="tbody">
                                @if (Model == null || !Model.Any())
                                {
                                    <tr class="trData">
                                        <td><input type="text"  name="questionOrder" lay-verify="titleIndex" autocomplete="off" placeholder="序号" class="layui-input"></td>
                                        <td><input type="text"  name="questionContent" lay-verify="titleContent" autocomplete="off" placeholder="请输入试题内容" class="layui-input"></td>
                                        <td><input type="text"  name="questionResult" lay-verify="titleResult" autocomplete="off" placeholder="请输入试题答案" class="layui-input"></td>
                                        <td><input type="text"  name="questionScore" lay-verify="score" autocomplete="off" placeholder="请输入试题分数" class="layui-input"></td>
                                        <td class="td-manage">
                                            <a title="删除" onclick="member_del(this)" href="javascript:;">
                                                <i class="layui-icon">&#xe640;</i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                                else
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr class="trData">
                                            <td><input type="text" name="questionOrder" lay-verify="titleIndex" autocomplete="off"  class="layui-input" value="@item.ORDERINDEX" @disabled></td>
                                            <td><input type="text" name="questionContent" lay-verify="titleContent" autocomplete="off"  class="layui-input" value="@item.DESCRIPTION" @disabled></td>
                                            <td><input type="text" name="questionResult" lay-verify="titleResult" autocomplete="off"  class="layui-input" value="@item.RESULT" @disabled></td>
                                            <td><input type="text" name="questionScore" lay-verify="score" autocomplete="off"  class="layui-input" value="@item.SCORE" @disabled></td>

                                            @if (string.IsNullOrEmpty(disabled))//试题没有被使用 或者考试未发布
                                            {
                                                <td class="td-manage">
                                                    <a title="删除" onclick="member_del(this)" href="javascript:;">
                                                        <i class="layui-icon">&#xe640;</i>
                                                    </a>
                                                </td>
                                            }


                                        </tr>
                                    }
                                }

                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>
<script>

    var AddQuestion = function() {
                                                                               
        var templete = '<tr class="trData"> <td><input type="text" name="questionOrder" lay-verify="titleIndex" autocomplete="off" placeholder="序号" class="layui-input"></td><td><input type="text" name="questionContent" lay-verify="titleContent" autocomplete="off" placeholder="请输入试题内容" class="layui-input"></td><td><input type="text" name="questionResult" lay-verify="titleResult" autocomplete="off" placeholder="请输入试题答案" class="layui-input"></td> <td><input type="text"  name="questionScore" lay-verify="score" autocomplete="off" placeholder="请输入试题分数" class="layui-input"></td><td class="td-manage"><a title="删除" onclick="member_del(this)" href="javascript:;"><i class="layui-icon">&#xe640;</i></a></td></tr>';
        $("#tbody").append(templete);
    }
    layui.use(['laydate', 'form'], function() {
        var laydate = layui.laydate;
        var form = layui.form;


        //自定义验证规则
        form.verify({
            titleIndex: [/[1-9]{1}(\d){0,2}$/, '题目序号必须是1到3位数字'],
            titleContent: function(value) {
                if (value.length < 10) {
                    return '试题内容至少10个字符';
                }
            },
            score:[/^\d+(\.\d+)?$/,'分数格式不正确'],
            titleResult: function(value) {
                if (value.length < 1) {
                    return '试题答案至少1个字符';
                }
            }
        });
        //监听提交
        form.on('submit(add)',
            function(data) {
                debugger;
                var postData = [];
                var trs = $("#tbody tr");
                for (i = 0; i < trs.length; i++) {
                    var inputs = $(trs[i]).find("td input");
                    var Order = $(inputs[0]).val();
                    var Content = $(inputs[1]).val();
                    var Result = $(inputs[2]).val();
                    var Score=$(inputs[3]).val();
                    if (Order && Content && Result && Score) {
                         postData.push({ "Order": Order, "Content": Content, "Result": Result,"Score":Score });
                    }

                }
                //console.log(postData) ;
                //console.log(data);
                $.post("/ExaminPaper/AddQuestions", { "Questions": postData, "Id": @paperid}, function(ret) {
                    if (ret.Code == 0) {
                        //发异步，把数据提交给php
                        layer.alert("增加成功", {
                            icon: 6
                        },
                            function() {
                                //关闭当前frame
                                xadmin.close();

                                // 可以对父窗口进行刷新
                                xadmin.father_reload();
                            });
                    } else {
                        layer.alert("增加失败", {
                            icon: 5
                        });
                    }

                });


                //return false;
            });
    });


    /*用户-删除*/
    function member_del(obj, id) {
        $(obj).parents("tr").remove();
    }




</script>
