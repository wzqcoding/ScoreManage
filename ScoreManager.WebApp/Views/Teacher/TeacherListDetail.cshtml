
@using Models
@model List<EDU_TEACHER>

<div class="layui-card-body ">
    <table class="layui-table layui-form">
        <thead>
            <tr>

                <th>ID</th>
                <th>登录名</th>
                <th>姓名</th>
                <th>手机</th>
                <th>邮箱</th>
                <th>角色</th>
                <th>学科</th>
                <th>操作</th>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>@item.ID</td>
                    <td>@item.User.USERNAME</td>
                    <td>@item.NAME</td>
                    <td>@item.PHONE_NUMBER</td>
                    <td>@item.EMAIL_ADDRESS</td>
                    <td>@string.Join(",", item.Roles?.Select(c=>c.NAME))</td>
                    <td>@item.Subject?.NAME</td>
                    <td class="td-manage">
                        <a title="编辑" onclick="xadmin.open('编辑','/Teacher/EditTeacher?id='+@item.ID,500,600)" href="javascript:;">
                            <i class="layui-icon">&#xe642;</i>
                        </a>
                        <a title="删除" onclick="member_del(this,@item.ID)" href="javascript:;">
                            <i class="layui-icon">&#xe640;</i>
                        </a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>



