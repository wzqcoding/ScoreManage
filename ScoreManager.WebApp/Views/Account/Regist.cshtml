
<div class="layui-fluid">
    <div class="layui-row">
        <form method="post" class="layui-form">
            <div class="layui-form-item">
                <label for="username" class="layui-form-label">
                    <span class="x-red">*</span>登录名
                </label>
                <div class="layui-input-inline">
                    <input type="text" id="username" name="username" required="" lay-verify="username"
                           autocomplete="off" class="layui-input">
                </div>
                <div class="layui-form-mid layui-word-aux">
                    <span class="x-red">*</span>将会成为您唯一的登入名
                </div>
            </div>
            <div id="divName" style="display:none" class="layui-form-item">
                <label for="realName" class="layui-form-label">
                    <span class="x-red">*</span>姓名
                </label>
                <div class="layui-input-inline">
                    <input type="text" id="realName" name="realName" required="" lay-verify="realname"
                           autocomplete="off" class="layui-input">
                </div>

            </div>

             <div id="divStudyCode" style="display:none" class="layui-form-item">
                <label for="StudyCode" class="layui-form-label">
                    学号
                </label>
                <div class="layui-input-inline">
                    <input type="text" id="StudyCode" name="StudyCode" lay-verify="studycode"
                           autocomplete="off" class="layui-input">
                </div>

            </div>


            <div id="divPhone" style="display:none" class="layui-form-item">
                <label for="phone" class="layui-form-label">
                    手机
                </label>
                <div class="layui-input-inline">
                    <input type="text" id="phone" name="phone" lay-verify="customphone"
                           autocomplete="off" class="layui-input">
                </div>

            </div>
            <div id="divEmail" style="display:none" class="layui-form-item">
                <label for="email" class="layui-form-label">
                    邮箱
                </label>
                <div class="layui-input-inline">
                    <input type="text" id="email" name="email" lay-verify="customemail"
                           autocomplete="off" class="layui-input">
                </div>

            </div>
            <div class="layui-form-item">
                <label class="layui-form-label"><span class="x-red">*</span>类型</label>
                <div class="layui-input-block">
                    <input lay-filter="userTypeRadio" type="radio" name="userType" value="0" title="超级管理员" checked>
                    <input lay-filter="userTypeRadio" type="radio" name="userType" value="1" title="教师">
                    <input lay-filter="userTypeRadio" type="radio" name="userType" value="2" title="学生">
                </div>
            </div>
            <div class="layui-form-item">
                <label for="L_pass" class="layui-form-label">
                    <span class="x-red">*</span>密码
                </label>
                <div class="layui-input-inline">
                    <input type="password" id="L_pass" name="pass" required="" lay-verify="pass"
                           autocomplete="off" class="layui-input">
                </div>
                <div class="layui-form-mid layui-word-aux">
                    6到16个字符
                </div>
            </div>
            <div class="layui-form-item">
                <label for="L_repass" class="layui-form-label">
                    <span class="x-red">*</span>确认密码
                </label>
                <div class="layui-input-inline">
                    <input type="password" id="L_repass" name="repass" required="" lay-verify="repass"
                           autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item">
                <label for="L_repass" class="layui-form-label">
                </label>
                <button class="layui-btn" lay-filter="add" onclick=" return false;" lay-submit="">
                    注册
                </button>
            </div>
        </form>
    </div>
</div>
<script>

    layui.use(['form', 'layer'],
        function() {
            $ = layui.jquery;
            var form = layui.form,
                layer = layui.layer;

            //自定义验证规则
            form.verify({
                username: function(value) {
                    if (value.length < 5) {
                        return '登录名至少得5个字符啊';
                    }
                },
                realname: function(value) {
                    if ($("#divName").css("display") != 'none' && value.length < 2) {
                        return '姓名至少得2个字符啊';
                    }
                },
                pass: [/(.+){6,12}$/, '密码必须6到12位'],
                studycode: function(value) {
                    if ($("#divStudyCode").css("display") != 'none' && value.length < 5) {
                        return '学号至少需要5个字符啊';
                    }
                },
                repass: function(value) {
                    if ($('#L_pass').val() != $('#L_repass').val()) {
                        return '两次密码不一致';
                    }
                },
                customphone: function(value) {
                    if ($("#divPhone").css("display") != 'none' && value) {
                        var b = /\d{11}/.test(value);
                        if (!b) return '请输入正确的手机号码';
                    }
                },
                customemail: function(value) {
                    if ($("#divEmail").css("display") != 'none' && value) {
                        var reg = /[a-z0-9._%+-]+@("@")[a-z0-9.-]+\.[a-z]{2,63}$/;
                        var b = reg.test(value);
                        if (!b) return '请输入正确的邮箱';
                    }
                }

            });

            //监听提交
            form.on('submit(add)', function(data) {
                debugger;
                //发异步，把数据提交给php
                $.post("/Account/Regist", data.field, function(ret) {
                    if (ret.Code == 0) {
                        layer.alert("注册成功", {
                            icon: 6
                        },
                            function() {
                                //关闭当前frame
                                xadmin.close();

                                // 可以对父窗口进行刷新
                                //xadmin.father_reload();
                            });
                        return false;
                    } else {
                        layer.alert(ret.Message, { icon: 5 });
                    }

                });
            });

            form.on('radio(userTypeRadio)', function(data) {
                if (data.value == 0) {
                    $("#divName").hide();
                    $("#divPhone").hide();
                    $("#divEmail").hide();
                    $("#divStudyCode").hide();
                }
                if (data.value == 1) {
                    $("#divName").show();
                    $("#divPhone").show();
                    $("#divEmail").show();
                    $("#divStudyCode").hide();
                }
                if (data.value == 2) {
                    $("#divName").show();
                    $("#divStudyCode").show();
                    $("#divPhone").hide();
                    $("#divEmail").hide();
                }
            });

        });

    

</script>


